<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_counterA_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="70sp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1000"
        />

    <Button
        android:id="@+id/btn_counterA_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/tv_counterA_count"
        app:layout_constraintEnd_toStartOf="@+id/tv_counterA_count"
        app:layout_constraintTop_toTopOf="@+id/tv_counterA_count" />

    <Button
        android:id="@+id/btn_counterA_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/tv_counterA_count"
        app:layout_constraintStart_toEndOf="@+id/tv_counterA_count"
        app:layout_constraintTop_toTopOf="@+id/tv_counterA_count" />

</android.support.constraint.ConstraintLayout>